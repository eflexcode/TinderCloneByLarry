<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/sent_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="7dp"
            android:background="@drawable/you_image_background"
            android:visibility="gone" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_pro_pics"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_below="@id/sent_image"
            android:layout_alignParentStart="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sent_image"
            android:layout_toEndOf="@id/chat_pro_pics"
            android:layout_margin="5dp"
            android:background="@drawable/you_background"
            android:padding="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/if_is_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_text"
           android:layout_toEndOf="@id/chat_pro_pics"
            android:layout_marginStart="5dp"
            android:text="sent"
            android:visibility="gone"
            android:textSize="19sp" />

    </RelativeLayout>

</RelativeLayout>