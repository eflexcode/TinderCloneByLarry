<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pro_pic"
        android:layout_width="97dp"
        android:layout_height="87dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/user_name_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pro_pic"
        android:layout_centerHorizontal="true"

        android:textColor="#000"
        android:textSize="23sp" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/user_name_age"
        android:layout_margin="15dp"
        android:id="@+id/set"
        android:background="@drawable/profile_seting_back">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_settings" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-13dp"
        android:paddingStart="10dp"
        android:id="@+id/set_text"
        android:text="SETTINGS"
        android:textColor="#767775"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/user_name_age"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/media"
        android:background="@drawable/add_image_back">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_photo_camera" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/media"
        android:layout_marginTop="-35dp"
        android:layout_centerHorizontal="true"
        android:text="ADD MEDIA"
        android:textColor="#767775"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/user_name_age"
        android:layout_margin="15dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/edit"
        android:background="@drawable/profile_seting_back">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_edit" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit"
        android:layout_marginTop="-13dp"
        android:paddingEnd="10dp"
        android:layout_alignParentEnd="true"
        android:text="EDIT INFO"
        android:textColor="#767775"
        android:textSize="17sp" />




    <Button
        android:id="@+id/logout_bnt"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="#fff"
        android:elevation="10dp"
        android:text="logout"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="normal" />


</RelativeLayout>